{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@platon/core/config": ["libs/core/config/src/index.ts"],
            "@platon/shared/ui": ["libs/shared/ui/src/index.ts"],
            "@platon/shared/ui/dialog": ["libs/shared/ui/dialog/src/index.ts"],
            "@platon/shared/ui/icon": ["libs/shared/ui/icon/src/index.ts"],
            "@platon/shared/ui/list": ["libs/shared/ui/list/src/index.ts"],
            "@platon/shared/ui/search": ["libs/shared/ui/search/src/index.ts"],
            "@platon/shared/ui/stepper": ["libs/shared/ui/stepper/src/index.ts"],
            "@platon/shared/ui/tree": ["libs/shared/ui/tree/src/index.ts"],
            "@platon/shared/utils": ["libs/shared/utils/src/index.ts"],
            "@platon/shared/vendors": ["libs/shared/vendors/src/index.ts"],
            "@platon/web-component": ["libs/web-component/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
